	item = Move to _Right
	cmd = qtile-cmd -o layout -f flip_right
	icon = None

	item = Move to _Up
	cmd = qtile-cmd -o layout -f flip_up
	icon = None

	item = Move to _Down
	cmd = qtile-cmd -o layout -f flip_down
	icon = None

	item = Toggle Minimi_ze
	cmd = qtile-cmd -o window -f toggle_minimize
