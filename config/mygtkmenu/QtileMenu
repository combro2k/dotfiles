	item = Toggle _Maximize
	cmd = qtile-cmd -o window -f toggle_maximize
	icon = /usr/share/icons/Adwaita/scalable/actions/window-maximize-symbolic.svg

	item = _Bring to Front
	cmd = qtile-cmd -o window -f bring_to_front
	icon = None

	item = _Close
