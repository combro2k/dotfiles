#
# wm independent hotkeys
#

# terminal emulator
super + Return
	urxvt
# terminal emulator
super + shift + Return
	bspc node -p south; \
	urxvt

# program launcher
super + space
	rofi -theme base16-twilight -demnu -show drun -modi drun

super + s
	rofi -theme base16-twilight -demnu -show ssh -modi ssh

super + r
	urxvt -e asciinema rec

alt + {_, shift + } Tab
	rofi -theme base16-twilight -demnu -show {windowcd,window} -modi {window,windowcd}

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; \
	notify-send "sxhkd config reloaded"

# shutdown
control + alt + BackSpace
	bspc quit

ctrl + super + q
	zenity --question --text="Shutdown?" && systemctl poweroff

# reboot
control + super + r
	zenity --question --text="Reboot?" && systemctl reboot

#
# bspwm hotkeys
#

# quit bspwm normally
super + 0
	zenity --question --text="Exit bspwm?" && bspc quit

# close and kill
super + shift  + q
	bspc node -k

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + s,f}
	bspc node -t {tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + ctrl + {Left,Right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

super + {1-9}
	bspc desktop -f '^{1-9}'

# per key config move and focus
super + shift + 1
	bspc node -d 1; \
	bspc desktop -f 1

super + shift + 2
	bspc node -d 2; \
	bspc desktop -f 2

super + shift + 3
	bspc node -d 3; \
	bspc desktop -f 3

super + shift + 4
	bspc node -d 4; \
	bspc desktop -f 4

super + shift + 5
	bspc node -d 5; \
	bspc desktop -f 5

super + shift + 6
	bspc node -d 6; \
	bspc desktop -f 6

super + shift + 7
	bspc node -d 7; \
	bspc desktop -f 7

super + shift + 8
	bspc node -d 8; \
	bspc desktop -f 8

super + shift + 9
	bspc node -d 9; \
	bspc desktop -f 9

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
#super + ctrl + {1-9}
#	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# mouse interaction
button3
	cd ~/.config/mygtkmenu ; \
	./mygtkmenui -- ~/.config/mygtkmenu/BspwmMenu

super + button1
	 bspc node -s pointed
