#define bgcolor #1e1e1e
#define fgcolor #a7a7a7

*TkTheme: clearlooks
Xcursor.theme: DMZ-White

!! Theme: tomorrow.dark

! special
*.foreground:   #a7a7a7
*.background:   #1e1e1e
*.cursorColor:  #a7a7a7

! black
*.color0:       #1e1e1e
*.color8:       #5f5a60

! red
*.color1:       #cf6a4c
*.color9:       #cf6a4c

! green
*.color2:       #8f9d6a
*.color10:      #8f9d6a

! yellow
*.color3:       #f9ee98
*.color11:      #f9ee98

! blue
*.color4:       #7587a6
*.color12:      #7587a6

! magenta
*.color5:       #9b859d
*.color13:      #9b859d

! cyan
*.color6:       #afc4db
*.color14:      #afc4db

! white
*.color7:       #a7a7a7
*.color15:      #ffffff

XTerm*background: bgcolor
XTerm*foreground: fgcolor

XTerm*reverseVideo: off
! XTerm*faceName: Terminus:size=11:antialias=true
XTerm*faceName: SauceCodePro Nerd Font:style=Light:size=11:antialias=true
xTerm*selectToClipboard: true


!-- Xft settings -- !
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull

!-- URxvt Specifics -- !
URxvt*scrollBar:                      false
URxvt*mouseWheelScrollPage:           false
URxvt*cursorBlink:                    true
URxvt*background:                     bgcolor
URxvt*foreground:                     fgcolor
Urxvt*saveLines:                      100000

! URxvt.font: xft:DroidSansMono Nerd Font Mono:style=Book:size=10:antialias=true:hinting=true
! URxvt.font: xft:DejaVuSansMono Nerd Font Mono:size=10:style=Book:antialias=true
! URxvt.font: xft:TerminessTTF Nerd Font Mono:Book:size=12:antialias=true:hinting=true
URxvt.font: xft:SauceCodePro Nerd Font:style=Light:size=12:antialias=true

URxvt*skipBuiltinGlyphs:  true
URxvt*termName:           rxvt-unicode
URxvt.letterSpace:        0
URxvt.perl-ext-common:    default,resize-font
URxvt.imLocale:	          en_US.UTF-8

URxvt.keysym.C-equal:     font-size:increase
URxvt.keysym.C-minus:     font-size:decrease
URxvt.keysym.C-S-equal:   font-size:incglobal
URxvt.keysym.C-S-minus:   font-size:decglobal
URxvt.keysym.C-0:         font-size:reset
URxvt.keysym.C-slash:     font-size:show

URxvt.scrollBar:          false
URxvt.intensityStyles:    false
URxvt.urgentOnBell:       false
URxvt.visualBell:         false
URxvt.iso14755:           false
URxvt.iso14755_52:        false
URxvt.meta8:              true
URxvt.depth:              32

URxvt*scrollTtyOutput:    false
URxvt*scrollWithBuffer:   true
URxvt*scrollTtyKeypress:  true

urxvt*urlLauncher:        firefox

!-- other adjustments -- !
rofi.color-enabled:       true
rofi.color-window:        #e5e5e5, #000000, #000000
rofi.terminal:            urxvt-256color
rofi.ssh-client:          ssh
rofi.ssh-command:         {terminal} -e {ssh-client} {host}
rofi.opacity:             100
rofi.width:               90
rofi.lines:               25
rofi.font:                SauceCodePro Nerd Font Medium 10
rofi.location:            0
rofi.padding:             5
rofi.levenshtein-sort:    true
rofi.fuzzy:               true
rofi.kb-cancel:           Escape,Control+c

!(call-process-shell-command "xrdb -load ~/.Xresources")
